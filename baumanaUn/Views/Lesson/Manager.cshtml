@model IEnumerable<baumanaUn.Models.Grade>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p></p>
<table id="grade" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="text-center">Название курса</th>
            <th class="text-center">Местоположение</th>
            <th class="text-center">Дата начала</th>
            <th class="text-center">Число проданных мест</th>
            <th class="text-center">Число доступных мест</th>
            <th class="text-center">Число зарезервированных мест</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var names in Model)
        {
            <tr>
                <td class="vert-align text-center">@names.Course.CourseName</td>
                <td class="vert-align text-center">@names.Location</td>
                <td class="vert-align text-center">@names.DateTimeStartCourse</td>
                <td class="vert-align text-center">@(names.SeatInStock - names.SeatAvailable - names.SeatReserve)</td>
                <td class="vert-align text-center">@names.SeatAvailable</td>
                <td class="vert-align text-center">@names.SeatReserve</td>
            </tr>
        }
    </tbody>
</table>